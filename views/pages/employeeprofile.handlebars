<div class="container">
    <h1>{{employee.userName}}</h1>
  <div class="card job-listing">
      <ul class="list-group list-group-flush">
        <p>Contact Details</p>
        <li class="list-group-item">
          <p>{{user.email}}</p>
        </li>

        <p>Employee Preferences</p>
        <li class="list-group-item">
          <p>{{employee.preferences}}</p>
        </li>
        <p>Employee Rating</p>
        <li class="list-group-item">
          <p>{{employee.overallRating}}</p>
        </li>

        <p>Resume</p>
        <embed src="/public/images/resumes/{{employee.resume}}" width="500" height="700">

        <h2>Job History</h2>
        <div class="card employer-listing">
          <ul class="list-group list-group-flush job-history-list">
            {{#each employee.historyOfJobs}}
              <li class="list-group-item">
                <div><p><a href="/post/{{this}}">{{this}}</a></p></div>
              </li>
            {{/each}}
          </ul>
        </div>




        </br>
        <div class="employee-btn-div">
          <button class="employeeprofile-button" type="button" id = "backtouser" onclick="location.href='/user/{{user.userName}}'">Back</button>
        </div>
        </br>


