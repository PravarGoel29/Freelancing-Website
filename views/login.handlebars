<head>
    <link rel="stylesheet" href="../public/css/stylesheet.css">
</head>
<section class="form my-4 mx-5">
    <div class="container">
        <div class="row no-gutter">
            <div class="col-lg-5">
                <img src="./images/freelanceImg.jpg" class="img-fluid" alt="No image">
            </div>
            <div class="col-lg-7 px-5 pt-5">
                <h1 class="font-weight-bold py-3">Freelance</h1>
                <h4>Sign In</h4>
                <form action="/login" method="POST" id="registration-form">
                    <div class="form-row">
                        <div class="col-lg-7">
                            <input type="email" placeholder="Email" class="form-control my-3 p-4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <input type="password" placeholder="Password" class="form-control my-3 p-4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <button type="submit" class="btnclass1 mt-3 mb-5">Login</button>
                        </div>
                    </div>
                    <a href="#">Forgot Password</a>
                    <p>Don't have an account? <a href="/signup">Sign Up</a> </p>
                </form>
            </div>
        </div>
    </div>
</section>

{{#if error}}<div class="text-goes-here">{{error}}</div>{{/if}}