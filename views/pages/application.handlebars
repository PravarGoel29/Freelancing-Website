<div class="container">
  <div class="row">
    <div class="col-lg-10 mx-auto mb-4">
      <div class="section-title text-center">
        <h1 class="top-c-sep">Application</h1>
      </div>
    </div>
  </div>

  <button type="button" id="profile" onclick="location.href='/profile/{{user.userName}}'">Profile</button>
  <form class="col-lg-9 offset-lg-3" name="job_apply" action="/application/{{postID}}/applied" method="post" id = "applyjob-form">
    <h1>{{user.userName}}</h1>
    <div class="row justify-content-center">
  <div class="form-row">
        <div class="col-lg-7">
          <input type="text" name="education" id="education" placeholder="Highest Education" class="form-control my-3 p-4" />
        </div>
      </div>

       <div class="form-row">
        <div class="col-lg-7">
          <input type="text" name="workExpYrs" id="workExpYrs" placeholder="Work Experience" class="form-control my-3 p-4" />
        </div>
      </div>

 <div class="form-row">
        <div class="col-lg-7">
          <input type="textarea" name="address" id="address" placeholder="Address" class="form-control my-3 p-4" />
        </div>
      </div>

      <div class="form-row">
        <div class="col-lg-7">
          <input type="text" name="ex_salary" id="ex_salary" placeholder="Expected Salary" class="form-control my-3 p-4" />
        </div>
      </div>

      <div class = "createpost-success" id="createpost-success" hidden>Succesfully Posted</div>
      <div class = "createpost-error" id = "createpost-failure" hidden>All fields needs to have values</div>

      <div class="form-row">
        <div class="col-lg-7">
          <button type="submit" class="btnclass1 mt-3 mb-5">Post</button>
        </div>
      </div>
    </div>
  </form>
</div>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
  crossorigin="anonymous"
></script>
<script src="/public/js/applications.js"></script>

{{#if error}}<div id = "createpost-error" class="error">{{error}}</div>{{/if}}