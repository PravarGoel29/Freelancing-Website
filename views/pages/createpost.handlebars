  {{!-- <button type="button" id="profile" onclick="location.href='/profile/{{user.userName}}'">Profile</button> --}}
    <div class="text-center">
      <h1>{{user.userName}}</h1>
    </div>
  <form class="d-flex justify-content-center" name="job_post" action="/post" method="post" id = "createpost-form">
    <div class="row justify-content-center body-row">
      <div class="form-row">
        <div class="col-lg-12">
          <label for="location">Location</label>
          <input type="text" name="location" id="location" placeholder="Location" class="form-control my-3 p-4" />
        </div>
        <div class="col-lg-12">
          <label for="description">description</label>
          <input
            type="textarea"
            name="description"
            id="description"
            placeholder="description"
            class="form-control my-3 p-4"
          />
        </div>
      </div>
      <div class="form-row">
        <div class="col-lg-12">
          <label for="title">title</label>
          <input type="text" name="title" id="title" placeholder="title" class="form-control my-3 p-4" />
        </div>
      </div>
      <div class="form-row">
        <div class="col-lg-12">
                <label for="domain" class="form-label">Domain</label>
                <select id="domain" type="text"name="domain"class="form-control my-3 p-4" required/>
                  <option value="">--Domain--</option>
                      <option value="Programming and Tech">Programming and Tech</option>
                      <option value="Designing">Designing</option>
                      <option value="Sales">Sales</option>
                      <option value="Photography">Photography</option>
                      <option value="Graphics and Design">Graphics and Design</option>
                      <option value="Digital Marketing">Digital Marketing</option>
                      <option value="Writing">Writing</option>
                      <option value="Video and Animation">Video and Animation</option>
                      <option value="Music and Audio">Music and Audio</option>
                      <option value="Other">Other</option>
                </select>
        </div>
      </div>
      <div class="form-row">
        <div class="col-lg-12">
          <label for="tags">Tags</label>
          <input type="text" name="tags" id="tags" placeholder="Tags" class="form-control my-3 p-4" />
        </div>
      </div>

      <div class="form-row">
        <div class="col-lg-12">
                <label for="jobType" class="form-label">jobType</label>
                <select id="jobtype" type="text"name="jobType"class="form-control my-3 p-4" required/>
                  <option value="">--JobType--</option>
                      <option value="In-Person">In-Person</option>
                      <option value="Hybrid">Hybrid</option>
                      <option value="Remote">Remote</option>
                </select>
        </div>
      </div>
      <div class="form-row">
        <div class="col-lg-12">
          <label for="salary">Salary</label>
          <input type="text" name="salary" id="salary" placeholder="Salary" class="form-control my-3 p-4" />
        </div>
      </div>

      <div class = "createpost-success" id="createpost-success" hidden>Succesfully Posted</div>
      <div class = "createpost-error" id = "createpost-failure" hidden>All fields needs to have values</div>

      <div class="form-row">
        <div class="col-lg-12">
          <button type="submit" class="btnclass1 mt-3 mb-5">Post</button>
        </div>
      </div>
    </div>
  </form>
</div>
