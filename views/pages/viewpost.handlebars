<h1>{{post.title}}</h1>

<p>Location : {{post.userName}}</p>
<p>Location : {{post.location}}</p>
<p>Description: {{post.description}}</p>
<p>Domain: {{post.domain}} </p>
<p>jobtype: {{post.jobtype}} </p>
<p> Salary : {{post.salary}} </p>
<p> tags: {{post.tags}} </p>
<p>Username: <form action="/employerDetails/{{post.userName}}" method="post"><input type="text" name="username" id="username" value="{{post.userName}}" hidden><button type="submit" class="btnclass1 mt-3 mb-5">{{post.userName}}'s profile</button></form></p>
</br>
</br>

 {{!-- only user who posted can view --}}
{{#if thisUserPostFlag}}
<h2>Applicants</h2>
  {{#each applicants}}
    <div><p><a href="/user/{{this}}">{{this}}</a></p>
    <button type="button" id = "invite" onclick="location.href='/post/{{../post._id}}/{{this}}/invite'">Invite</button>
    </div>
  {{/each}}

{{else}}
<button type="button" id = "apply" onclick="location.href='/post/{{post._id}}/applied'">Apply</button>
<button type="button" id = "save" onclick="location.href='/post/{{post._id}}/saved'">SaveThisJob</button>
{{/if}}
</br>
</br>
</br>
<button type="button" id = "profile" onclick="location.href='/profile/{{user.userName}}'">Profile</button>
</br>

<a href="/home">Home</a>
{{#if error}}<div id = "viewpost-error" class="error">{{error}}</div>{{/if}}
