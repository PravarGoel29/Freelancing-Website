<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/stylesheet.css">
</head>
<section class="form my-4 mx-5">
    <div class="container">
        <div class="row no-gutter">
            <div class="col-lg-5">
                <img src="../public/images/freelanceImg.jpg" class="img-fluid" alt="No image">
            </div>
            <div class="col-lg-7 px-5 pt-5">
                <h1 class="font-weight-bold py-3">Freelance</h1>
                <h4>Sign In</h4>
                <form action="/login" method="POST" id="registration-form">
                    <div class="form-row">
                        <div class="col-lg-7">
                            <label for="usernameInput">Username</label>
                            <input id="usernameInput" type="text" name="usernameInput" placeholder="username" class="form-control my-3 p-4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <label for="passwordInput">Password</label>
                            <input id="passwordInput" type="text" name="passwordInput" placeholder="password" class="form-control my-3 p-4">
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-lg-7">
                            <button type="submit" class="btnclass1 mt-3 mb-5">Sign in</button>
                        </div>
                    </div>
                    <a href="#">Forgot Password</a>
                    <p>Don't have an account? <a href="/signup">Sign Up</a> </p>
                </form>
            </div>
        </div>
    </div>
</section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{{#if error}}<div class="text-goes-here">{{error}}</div>{{/if}}