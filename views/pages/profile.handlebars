{{#if user}}
  <div class="user-class">
    <button type="button" onclick="location.href='/profile/{{user.userName}}/addPost'">Create Post</button>
  </div>

  {{!--<img alt="user" src="/public/images/userprofile/{{user.profileImage}}" id="profile_image">--}}
  <h1>{{user.userName}}</h1>
  <div>{{user.firstName}} {{user.lastName}}</div>
  <div class="label">{{user.email}}</div>

  <h2>Jobs Taken</h2>
  {{!-- {{#each jobsTaken}}
<div><a href="/jobsTaken/{{this._id}}">{{this.name}}</a></div>
{{/each}} --}}
  <br />

  <h2>Invites</h2>
  {{!-- {{#each invites}}
<div><a href="/invite/{{this._id}}">{{this.name}}</a></div>
{{/each}} --}}
  <br />

  <h2>Saved Jobs</h2>
  {{#each wishList}}
    <div><p><a href="/post/{{this}}">{{this}}</a></p></div>
  {{/each}}
  <br />

  <h2>Jobs posted</h2>
  {{#each posts}}
    <div><p><a href="/post/{{this._id}}">{{this._id}} {{this.title}}</a></p></div>
  {{/each}}

  <br />
  </br>
</br>
<a href="/home">Home</a>
{{/if}}

{{#if error}}<div id="viewpost-error" class="error">{{error}}</div>{{/if}}